{
  "name": "spaceterm",
  "version": "0.1.0",
  "description": "Multiple terminals on a zoomable canvas",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "concurrently --restart-tries -1 --restart-after 0 \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "tsx src/server/index.ts",
    "client:dev": "electron-vite dev",
    "client:build": "electron-vite build",
    "client:preview": "electron-vite preview",
    "client:package": "electron-vite build && electron-builder",
    "start": "npm run client:build && concurrently \"npm run server:dev\" \"npm run client:preview\"",
    "et": "tsx src/cli/emergency-terminal.ts",
    "lint": "eslint src/",
    "build": "npm run client:build",
    "postinstall": "electron-rebuild"
  },
  "dependencies": {
    "@codemirror/commands": "^6.10.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.12.1",
    "@codemirror/state": "^6.5.4",
    "@codemirror/view": "^6.39.14",
    "@echogarden/macos-native-tts": "^0.1.0",
    "@lezer/markdown": "^1.6.3",
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.16.0",
    "@xterm/addon-unicode11": "^0.9.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/headless": "^6.0.0",
    "@xterm/xterm": "^5.5.0",
    "audiotee": "^0.0.7",
    "node-pty": "^1.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^4.1.12",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.1",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "eslint": "^9.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3"
  }
}
